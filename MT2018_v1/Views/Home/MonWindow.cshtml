@section scripts{
    @Scripts.Render("~/Scripts/mainGL.js")
    @Scripts.Render("~/Scripts/funcionesMonWin.js")
}
<div class="container-fluid">
    <h2>Mon. Window</h2>
    <div class="row" style="padding: 10px">
        <div class="col-md-4" style="padding: 10px">
            <!-- Panel de información general del modelo cargado. -->
            <div class="panel panel-default">
                <div class="panel-heading h3" style="background-color: #FE886F; color: white"><strong>General</strong></div>
                <div class="panel-body" align="left">
                    <div class="form-horizontal">
                        <b>Modelo:</b>
                        <select id="selectStruct" data-request-url="BuscaModelo">
                            <option></option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8" style="padding: 10px">
            <!-- Panel de visualización del modelo cargado. -->
            <div class="panel panel-default" style="padding: 5px; height: 400px" id="panelWin">
                <div id="panelView" class="panel-body h3" style="background: #868383; color: white; height: 100%; padding: 0px">
                    <div id="noLoadedModelMessage" style="height: 100%">Ningún modelo cargado.</div>
                </div>
            </div>
        </div>
    </div>
</div><br>
